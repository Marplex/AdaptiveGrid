<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0-windows;net5.0-windows;netcoreapp3.1;net48;net47;net46</TargetFrameworks>
    <Nullable>disable</Nullable>
    <UseWPF>true</UseWPF>
    <Authors>marplex</Authors>
    <Description>A powerful responsive Grid system for WPF, inspired by CSS grid</Description>
    <PackageProjectUrl>https://github.com/marplex/AdaptiveGrid</PackageProjectUrl>
    <RepositoryUrl>https://github.com/marplex/AdaptiveGrid</RepositoryUrl>
    <PackageTags>grid;wpf;ui;responsive;css grid;adaptive;layout</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\Art\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
